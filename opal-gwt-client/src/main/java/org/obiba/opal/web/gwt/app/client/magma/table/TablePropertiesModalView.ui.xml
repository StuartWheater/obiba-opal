<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="dialog" resizable="true" closeVisible="true" keyboard="true" animation="false">
    <g:FlowPanel>
        <!--Name-->
        <b:ControlGroup ui:field="nameGroup">
          <b:ControlLabel>
            <ui:msg description="Name label">Name</ui:msg>
            <o:RequiredIcon/>
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox ui:field="name"/>
          </b:Controls>
          <b:HelpBlock>
            <ui:msg description="Table Name help">A table must have a unique name.</ui:msg>
          </b:HelpBlock>
        </b:ControlGroup>

        <!--Entity type-->
        <b:ControlGroup ui:field="entityGroup">
          <b:ControlLabel>
            <ui:msg description="Entity Type label">Entity Type</ui:msg>
            <o:RequiredIcon/>
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox ui:field="entityType">Participant</b:TextBox>
          </b:Controls>
          <b:HelpBlock>
            <ui:msg description="Table entity type help">What the table data are about.</ui:msg>
          </b:HelpBlock>
        </b:ControlGroup>
    </g:FlowPanel>

    <b:ModalFooter>
      <b:Button ui:field="saveButton" type="PRIMARY">
        <ui:msg description="Save label">Save</ui:msg>
      </b:Button>
      <b:Button ui:field="closeButton">
        <ui:msg description="Cancel label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>

  </o:Modal>

</ui:UiBinder>