<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <!-- Cross variables -->
    <b:FluidRow>
      <b:Column size="12">
        <b:NavPills ui:field="pills" visible="false">
          <b:NavLink active="true" ui:field="frequency">
            <ui:msg description="Frequency label">Frequency</ui:msg>
          </b:NavLink>
          <b:NavLink ui:field="percentage">
            <ui:msg description="Percentage label">Percentage</ui:msg>
          </b:NavLink>
        </b:NavPills>

        <g:FlowPanel ui:field="crossTable"/>
      </b:Column>
    </b:FluidRow>

  </g:FlowPanel>

</ui:UiBinder>