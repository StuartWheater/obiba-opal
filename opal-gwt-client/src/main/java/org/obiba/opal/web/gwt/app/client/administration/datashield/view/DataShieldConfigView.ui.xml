<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="section-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>

    <g:FlowPanel>
      <b:Heading size="4">
        <ui:msg description="Packages label">Packages</ui:msg>
      </b:Heading>
      <g:SimplePanel ui:field="packages"></g:SimplePanel>
    </g:FlowPanel>

    <g:FlowPanel>
      <b:Heading size="4">
        <ui:msg description="Options label">Options</ui:msg>
      </b:Heading>
      <g:SimplePanel ui:field="options"></g:SimplePanel>
    </g:FlowPanel>

    <g:FlowPanel>
      <b:Heading size="4">
        <ui:msg description="Methods label">Methods</ui:msg>
      </b:Heading>
      <b:Paragraph>

      </b:Paragraph>
    </g:FlowPanel>

    <o:NavPillsPanel ui:field="environments"/>

    <g:FlowPanel ui:field="permissionsPanel">
      <b:Heading size="4">
        <ui:msg description="Permissions label">Permissions</ui:msg>
      </b:Heading>
      <g:SimplePanel ui:field="permissions"></g:SimplePanel>
    </g:FlowPanel>

    <b:Heading size="4">
      <ui:msg description="DataSHIELD Logs label">Logs</ui:msg>
    </b:Heading>
    <g:FlowPanel addStyleNames="xlarge-bottom-margin">
      <b:Paragraph>
        <ui:msg description="Datashield logs description">Datashield activity logs can be downloaded in their raw form.</ui:msg>
      </b:Paragraph>
      <b:Button ui:field="downloadLogs" icon="DOWNLOAD" type="INFO">
        <ui:msg description="Download datashield logs label">Download</ui:msg>
      </b:Button>
    </g:FlowPanel>


  </g:FlowPanel>
</ui:UiBinder>